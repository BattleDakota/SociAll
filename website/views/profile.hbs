                    <div class="form-group">
                       <!-- Message Row-->
                        <div class="form-group">
                            <label for="validationDefault03"></label>
                            <input type="text" class="form-control" style = "" id="validationDefault03" placeholder="Type Here" name = "message" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" onClick="window.location.reload();"> Update</button>
                </form>
                
              </div>
            </div>
          </div>
        </div>
      </div>

      <!--change snapchat info-->
      <div class="modal fade" id="userSnapchatModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
 
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Update Username</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
